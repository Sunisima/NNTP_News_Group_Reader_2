<Window x:Class="NNTP_News_Group_Reader_2.Views.ArticleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Article" Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid Background="#FFF8F8F8" Margin="10">
        <TextBox x:Name="ArticleContent"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"
                 FontSize="14"
                 FontFamily="Consolas"/>
    </Grid>
</Window>
